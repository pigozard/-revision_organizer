
<div class="row">
  <div class="col">
    <h1><%= @chat.bloc.name %></h1>
    <%= raw(@chat.bloc.content) %>
    <div class="col-md-3">

    </div>
  </div>

  <%= link_to "â† #{@chat.bloc.name}", bloc_path(@chat.bloc) %>
  <h1 id="chat_title"><%= @chat.title %></h1>

  <% @chat.messages.each do |message| %>
    <p>
      <strong><%= message.role %></strong>
      <%= raw(message.content) %>
    </p>
  <% end %>

  <div id="new_message_container">
    <%= simple_form_for [@chat, @message] do |f| %>
      <%= f.input :content, label: "Ask a question", required: true, placeholder: "How should I get started with the bloc?" %>
      <%= f.button :submit, 'Ask LLM', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
